@model FifthTask.Models.ForDropByIdModel

<button class="btn btn-default" onclick="GoToUrlBlank('../Trade/ShowSales')">Show sales</button>
<br>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enter the sale id for drop</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ElementId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ElementId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ElementId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Remove sale" class="btn btn-default" onclick="ShowMessage()" />
            </div>
        </div>
    </div>
}

<script>
    function ShowMessage() {
        alert('You tried to delete a record of the sale. Check the list of sales.');
    }

</script>

